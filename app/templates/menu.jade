ion-side-menus
      ion-pane(ion-side-menu-content='')
        ion-nav-bar.bar-stable
          ion-nav-buttons(side="left")
            button(menu-toggle="left") menu
          ion-nav-buttons(side="right")
            button(menu-toggle="right") playlist
          ion-nav-back-button.button-clear
            i.icon.ion-chevron-left
            |  Back
  
        ion-nav-view(name='main-content', animation='slide-left-right')
      ion-side-menu(side='left')
        header.bar.bar-header.bar-stable
          h1.title Left
        ion-content.has-header
          ion-list
            ion-item(nav-clear='', menu-close='', ui-sref='app.artists')
              | Songwriters
            ion-item(nav-clear='', menu-close='', ui-sref='app.songs')
              | Songs
            ion-item(nav-clear='', menu-close='', href='#/app/account')
              | Account
      ion-side-menu(side='right')
        header.bar.bar-header.bar-stable
          h1.title Playlist
        ion-content.has-header
          ion-list
            ion-item(ng-class='$index==ctrl.currentSong?"active":""',ng-repeat='song in ctrl.playlist track by song.$id',ng-click='ctrl.setNowPlaying($index)')
              {{song.title}}
            ion-item
              videogular(vg-player-ready="ctrl.onPlayerReady($API)")
                vg-media(vg-src='ctrl.config.sources',vg-auto-play='true', vg-tracks='ctrl.config.tracks')
                vg-volume
                  vg-mute-button
                  vg-volume-bar
                vg-fullscreen-button              
                vg-buffering
                vg-controls
