html
  body
    ion-view(view-title='Songwriters')
      ion-content(has-header='true', padding='true',overflow-scroll="true",)
        loader
        ul.list
          li.item.item-thumbnail-left(ng-repeat='artist in artists | orderBy:"songs | length":true',ng-click='showArtist(artist)')
            img.avatar(ng-src='{{artist.avatar}}?default=404',err-src='img/song-a-day.png',alt='{{artist.alias}}',ng-click='showArtist(artist.$id)')
            h1.when-large {{artist.alias}}
            h2.artist_index_alias.when-small {{artist.alias}}
            span.float-right {{artist.songs|length}} 
          
